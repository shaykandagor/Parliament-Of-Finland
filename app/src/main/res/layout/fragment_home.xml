<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="388dp"
                android:layout_height="117dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon" />
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:layout_width="0dp"
                android:id="@+id/members_card"
                android:layout_height="200dp"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/members_ic"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_group" />

                    <TextView
                        android:gravity="center"
                        android:layout_alignBottom="@+id/members_ic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parliament Members" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:id="@+id/about_parliament_card"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/about_parliament_ic"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_parliament" />

                    <TextView
                        android:gravity="center"
                        android:layout_alignBottom="@+id/about_parliament_ic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Parliament History" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:id="@+id/political_party_card"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/political_party_ic"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/pol_party" />

                    <TextView
                        android:gravity="center"
                        android:layout_alignBottom="@+id/political_party_ic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Political parties" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:id="@+id/about_parliament"
                android:layout_weight="0.5"
                android:layout_margin="10dp"
                app:cardCornerRadius="20dp"
                android:focusable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/notes_ic"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_building" />

                    <TextView
                        android:gravity="center"
                        android:layout_alignBottom="@+id/notes_ic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Parliament" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </LinearLayout>


</FrameLayout>