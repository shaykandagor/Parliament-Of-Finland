<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.SplashFragment">

    <ImageView
        android:id="@+id/parliament_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/parliament_seats"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADFFFFFF"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="453dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/parliament_textView"
            android:layout_width="373dp"
            android:layout_height="103dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="281dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="serif-monospace"
            android:text="@string/parliament_of_finland"
            android:textColor="@color/black"
            android:textSize="52sp"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp" />

    </RelativeLayout>

</FrameLayout>